NAME	= cub3D

SRCS	= srcs/main.c

INCS	= header.h  mlx_Linux/mlx.h

OBJS	= $(SRCS:%.c=%.o)

DEPS	= $(OBJS:%.d=%.o)

CC	= gcc

CFLAGS	= -Wall -Wextra -Werror -g3 

all	:	$(NAME)

%.o	:	%.c
		$(CC) $(CFLAGS) -I/usr/include -Imlx_Linux -I./ -c $< -o $@

%.o	:	%.c
		$(CC) $(CFLAGS) -I/usr/include -Imlx_Linux -I./ -c $< -o $@

$(NAME)	:	$(DEPS)
		make -C ./mlx_Linux
		$(CC) $(DEPS) -Lmlx_Linux -lmlx_Linux -L/usr/lib -Imlx_Linux -lXext -lX11 -lm -lz -o $@

clean	:
		make -C ./mlx_Linux clean
		rm -rf $(OBJS)

fclean	:	clean
		rm -rf $(NAME)

re	:	fclean
		make all

.PHONY	:	all clean fclean re
